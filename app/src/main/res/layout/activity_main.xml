<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sentiance.sdkstarter.controldetections.MainActivity">

    <Button
        android:id="@+id/controlDetectionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onControlDetectionsButtonClicked" />

    <Button
        android:id="@+id/controlTripButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/controlDetectionsButton"
        android:layout_marginBottom="16dp"
        android:onClick="onControlTripButtonClicked" />

    <ListView
        android:id="@+id/statusList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/controlTripButton"
        android:clipToPadding="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbarStyle="outsideOverlay" />

</RelativeLayout>
